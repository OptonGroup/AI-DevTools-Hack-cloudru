# Follow-Up API Configuration
# Вариант 1: Авторизация через email/password (рекомендуется)
FOLLOWUP_EMAIL=your_email@example.com
FOLLOWUP_PASSWORD=your_password_here

# Вариант 2: Использовать готовый API-ключ (JWT токен)
# FOLLOWUP_API_KEY=your_api_key_here

FOLLOWUP_API_URL=https://api.follow-up.tech

# Server Configuration
PORT=8000
LOG_LEVEL=INFO

# S3 Cloud.ru Configuration for RAG
# Обязательно для работы sync_conference_to_rag
CLOUD_RAG_S3_ENDPOINT=https://s3.cloud.ru
CLOUD_RAG_S3_REGION=ru-central-1
CLOUD_RAG_S3_BUCKET=your_bucket_id_here
CLOUD_RAG_S3_ACCESS_KEY=your_access_key_here
CLOUD_RAG_S3_SECRET_KEY=your_secret_key_here
