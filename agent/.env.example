# Evolution Foundation Models (LLM)
# =================================
LLM_API_BASE=https://api.ai-agents.evolution.cloud.ru/llm/v1
LLM_API_KEY=your_evolution_api_key
LLM_MODEL=gpt-4o

# MCP Servers URLs
# ================
# Follow-Up MCP - запись и транскрибация созвонов
FOLLOWUP_MCP_URL=http://localhost:8000/mcp

# Google Calendar MCP - управление календарём
GCALENDAR_MCP_URL=http://localhost:8001/mcp

# Managed RAG MCP - поиск по транскрипциям
MANAGED_RAG_MCP_URL=http://localhost:8002/mcp

# Agent Configuration
# ===================
AGENT_NAME=Meeting Assistant
AGENT_DESCRIPTION=AI-ассистент для работы с корпоративными созвонами
AGENT_VERSION=1.0.0
PORT=10000

# A2A Protocol
# ============
URL_AGENT=http://localhost:10000

# Telemetry (optional)
# ====================
ENABLE_PHOENIX=false
# PHOENIX_ENDPOINT=http://localhost:6006

# Logging
# =======
LOG_LEVEL=INFO
